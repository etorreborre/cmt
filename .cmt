# The input parts
{
    # Shows a list of options
    "Type" = [
        "feature",
        "fix",
        "doc",
        "deps",
        "style",
        "refactor",
        "test",
        "project"
    ]
    "Subject" = @ # Single line input
    "Body" = !@ # Multi-line input
}

# The output format
# Takes the values provided from the input stage
# and interpolates them in
${Type}: ${Subject}

${Body}
